{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install && npx puppeteer browsers install chrome",
  "framework": "nextjs",
  "functions": {
    "app/api/jr/check/route.ts": {
      "maxDuration": 30
    },
    "app/api/jr/notify/route.ts": {
      "maxDuration": 30
    },
    "app/api/jr/status/route.ts": {
      "maxDuration": 30
    },
    "app/api/jr/subscribe/route.ts": {
      "maxDuration": 30
    },
    "app/api/jr/unsubscribe/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/jr/check",
      "schedule": "0 7 * * 1-5"
    },
    {
      "path": "/api/jr/check",
      "schedule": "0 17 * * 1-5"
    }
  ],
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "false",
    "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium-browser"
  }
}